<%= render 'notice' %>

<div class="row">
  <div class="col-sm-8 col-sm-offset-2">
    <% unless @person.union.nil? %>
      <% @person.union.divisions.each do |division| %> 
        <%= link_to "#{@person.union.short_name} #{@person.division.short_name} #{t('.agreements')}", union_path(@person.union, division_id: division.id), class: "btn btn-default pull-right" %>
          &nbsp;
      <% end %>
    <% end %>
    <h1>
      <%= "#{t('.editing')} #{profile_heading}" %>
      <br/><small><%= t('.only_visible_to', organisation: "#{owner_union.short_name}#{@person.union.id == owner_union.id ? "" : " & " + @person.union.short_name}") %></small>
    </h1>
    <%= render 'form' %>

    <hr/>
    <%= link_to t('.permanently_delete'), profile_path(@person), method: :delete, class: "btn btn-danger", style: "color: white", data: {confirm: "Are you really really sure?"} %>
  </div>
</div>
